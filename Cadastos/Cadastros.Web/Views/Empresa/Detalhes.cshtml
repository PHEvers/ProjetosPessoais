@model Cadastros.Domain.DTO.EmpresaDTO

<h1>Detalhes</h1>
<h4>Empresa</h4>

<div class="row">

    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Nome Fantasia
            <b>@Model.nomeFantasia</b>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Unidade Federal
            <b>@Model.ufId</b>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            CNPJ
            <b>@Model.cNPJ</b>
        </li>
    </ul>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a> Id </a>
                </th>
                <th>
                    <a> Nome </a>
                </th>
                <th>
                    <a> CPF_CNPJ </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.listaFornecedor)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id )
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cpf_cnpj)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Detalhes" asp-route-id="@item.id">Detalhes</a> |
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                        <a class="btn btn-danger" href="#" onclick="deleteEmpresa(@item.id)">Deletar</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }