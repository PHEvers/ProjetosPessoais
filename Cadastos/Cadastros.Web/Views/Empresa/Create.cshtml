@model Cadastros.Domain.DTO.EmpresaDTO
<h1>Criar</h1>
<h4>Empresa</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nomeFantasia" class="control-label">Nome fantasia</label>
                <input asp-for="nomeFantasia" class="form-control" />
                <span asp-validation-for="nomeFantasia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cNPJ" class="control-label">CNPJ</label>
                <input asp-for="cNPJ" class="form-control" />
                <span asp-validation-for="cNPJ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ufId" class="control-label"></label>
                <select asp-for="ufId" class="form-control" asp-items="ViewBag.ufId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para kista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

