@model Cadastros.Domain.DTO.FornecedorDTO
<h1>Adicionar</h1>
<h4>Fornecedor</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="empresaId" class="control-label"></label>
                <select asp-for="empresaId" class="form-control" asp-items="ViewBag.empresaId"></select>
            </div>

            <div class="form-group">
                <label asp-for="nome" class="control-label">Nome</label>
                <input asp-for="nome" class="form-control" />
                <span asp-validation-for="nome" class="text-danger"></span>
            </div>
            <div class="form-check form-switch">
                <input asp-for="pessoaFisica" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
                <label asp-for="pessoaFisica" class="form-check-label" for="flexSwitchCheckDefault">Pessoa Fisica?</label>
            </div>
            <div class="form-group">
                <label asp-for="cpf_cnpj" class="control-label">CNPJ ou CPF</label>
                <input asp-for="cpf_cnpj" class="form-control" />
                <span asp-validation-for="cpf_cnpj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="rg" class="control-label">RG</label>
                <input asp-for="rg" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="dataDeNascimento"  class="control-label" for="date">Data de Nascimento</label>
                <div class="col-sm-4">
                    <div class="input-group">
                        <div class="input-group-addon round-form">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <input asp-for="dataDeNascimento" type="text" class="form-control round-form" id="dtnasc" name="dtnasc" placeholder="DD/MM/YYYY" required autocomplete="false" value="">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para lista</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }