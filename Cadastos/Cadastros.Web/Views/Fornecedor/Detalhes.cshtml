@model Cadastros.Domain.DTO.FornecedorDTO

<h1>Detalhes</h1>
<h4>Fornecedor</h4>

<div class="row">

    <ul class="list-group">
        <li class="list-group-item d-flex justify-content-between align-items-center">
            Nome
            <b>@Model.nome</b>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            CPF ou CNPJ
            <b>@Model.cpf_cnpj</b>
        </li>
        <li class="list-group-item d-flex justify-content-between align-items-center">
            RG
            <b>@Model.rg</b>
        </li>

    </ul>
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a> Id </a>
                </th>
                <th>
                    <a> Numero </a>
                </th>
                <th>
                    <a class="button"> Adicionar </a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.telefoneList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.id )
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.numero)
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                        <a class="btn btn-danger" href="#" onclick="deleteEmpresa(@item.id)">Deletar</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }