@model IEnumerable<Cadastros.Domain.DTO.FornecedorDTO>
<div class="text-center">
    <h1 class="display-4">Menu de fornecedores</h1>
</div>

<p>
    <a class="btn btn-primary" asp-action="Create">Adicionar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a> Id </a>
            </th>
            <th>
                <a> Nome </a>
            </th>
            <th>
                <a> Empresa </a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.id )
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.empresaId)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Detalhes" asp-route-id="@item.id">Detalhes</a> |
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                    <a class="btn btn-danger" href="#" onclick="deleteEmpresa(@item.id)">Deletar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        const deleteEmpresa = (idParam) => {
            msgModalMessage(`Deseja realmente excluir o registro ${idParam}?`, () => {
                $.ajax({
                    url: `@Url.Action("Delete")`,
                    method: 'POST',
                    data: {
                        id: idParam
                    },
                    success: (resp) => {
                        if (resp.code == '200') {
                            liveToastMessage(`O Registro ${idParam} foi excluído.`, 'Empresa');
                            setTimeout(() => { window.location.reload(); }, 4000);
                        }
                    }
                });
                closeMsgModalMessage();
            });
        }
    </script>
}